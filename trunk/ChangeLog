	* Makefile.am: Set doc subdir to $(LATEX_PACKAGE).
	* latex/texfont.mk.am: Install LaTeX font files under $(LATEX_PACKAGE).
	* latex/Makefile.am: Install LaTeX stuff under $(LATEX_PACKAGE).

